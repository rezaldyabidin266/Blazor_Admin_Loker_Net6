@inject NavigationManager NavigationManager
@inherits AdminNavMobileBase
<style>
</style>
<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-xl px-4">
        <div class="d-flex nav-mobile-container w-100 flex-wrap align-items-center">
            <a class="me-3 off" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                <i class="fas fa-bars fa-lg"></i>
            </a>
            <a class="navbar-brand">Admin Loker</a>
            <div class="drop ms-auto dropstart">
                <a class="titik" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-lg"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" onclick="history.back()"><i class="fas fa-undo"></i>Kembali</a></li>
                    <li><a class="dropdown-item"><i class="fas fa-question-circle"></i>Help Us</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a href="javascript:void(0);" @onclick="goLogout" class="dropdown-item"><i class="fas fa-sign-out"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<div class="offcanvas offcanvas-start" data-bs-backdrop="false" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Menu</h5>
        <a class="" data-bs-dismiss="offcanvas" aria-label="Close"><i class="fas fa-times fa-lg"></i></a>
    </div>
    <div class="offcanvas-body">
        <ul class="list-unstyled menu">
            <li>
                <a data-bs-dismiss="offcanvas" @onclick="goHome"><i class="fas fa-home"></i>Home</a>
            </li>
            <hr />
            <li>
                <a data-bs-dismiss="offcanvas" @onclick="goCalonPelamar"><i class="fas fa-users"></i>Calon Pelamar</a>
            </li>
            <hr />
            <li>
                <a data-bs-dismiss="offcanvas" @onclick="goEditPw"><i class="fas fa-cog"></i>Edit Password</a>
            </li>
            <hr />
        </ul>
    </div>
</div>
@code {
      protected void goHome()
    {
        NavigationManager.NavigateTo("/loker");
    }

    protected void goLogin()
    {
        NavigationManager.NavigateTo("/adminLogin");
    }
    protected void goCalonPelamar()
    {
        NavigationManager.NavigateTo("/calonPelamar");
    }
    protected void goHistoryJawaban()
    {
        NavigationManager.NavigateTo("/allHistoryJawaban");
    }
    protected void goEditPw()
    {
        NavigationManager.NavigateTo("/editPassword");
    }
}
